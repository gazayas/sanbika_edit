<h1 id="login">ログイン</h1>


<div id="login_form">
<%= form_tag '/login' do %>
	<table>
		<tr>
			<td>ユーザ名</td>
  			<td><%= text_field_tag :name %></td>
  		</tr>
  		<tr>
  			<td>パスワード</td>
  			<td><%= password_field_tag :password %></tr>
  		</tr>
  		<tr>
  			<td><%= link_to "(パスワードを忘れた場合)", new_password_reset_path, :id => "forgot_password" %></td>
  		</tr>
  		<tr>
  			<td><%= submit_tag "送信" %></td>
  		</tr>
	</table>
<% end %>
</div>
