<!-- text_field_tag や password_field_tag に 「nil」 を入れた理由： -->
<!-- http://stackoverflow.com/questions/12729747/placeholder-text-is-not-showing-when-using-rails-and-bootstrap -->

<div class="user_form">
<div class="panel panel-default">
	<div class="panel panel-heading text-center">
		<h2>ログイン</h2>
	</div>
	<%= form_tag '/login' do %>

<% col_size = "30" %>
	<table>
		<tr>
			<td>
				<div class="input-group">
					<span class="input-group-addon">
						<span class="glyphicon glyphicon-user"></span>
					</span>
					<%= text_field_tag :name, nil, class: 'form-control', placeholder: 'ユーザー名', size: col_size %>
				</div>
			<td/>
			</td>
  	</tr>
  	<tr>
  		<td>
				<div class="input-group">
					<span class="input-group-addon">
						<span class="glyphicon glyphicon-lock"></span>
					</span>
					<%= password_field_tag :password, nil, class: 'form-control', placeholder: 'パスワード', size: col_size %>
				</div>
			</td>
  	</tr>
  	<tr>
  		<td><%= link_to "(パスワードを忘れた場合)", new_password_reset_path, :id => "forgot_password" %></td>
  	</tr>
  	<tr>
  		<td><%= submit_tag "ログイン", class: 'input-group btn btn-primary center-block' %></td>
  	</tr>
	</table>
<% end %>
</div>
</div>
