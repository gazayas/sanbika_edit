<div id="profile_wrapper">
  <% if current_user == @user %>
    <%= @user.name%>さん、お帰りなさい<br/>
    <%= link_to "プロフィルの編集", edit_user_path(current_user) %>
  <% else %>
    <%= @user.name %>さんのページへようこそ
  <% end %>

<br/><br/>

今の気分：　<%= @user.status %><br/><br/>

<% if current_user == @user %>
  新しい歌の<%= link_to "作成", new_user_song_path(@user) %>
<% end %>

<ul>
  <% @songs.each do |song| %>
    <!-- songsのindexもあっても大丈夫だけど自分のプロファイルで見えるようにしたい -->
    <!-- ただ、ページネーションを使ったらajaxを使わないとダメだと思う -->
    <!-- gem kaminari でページネーション -->
    <li>
      <%= link_to song.title, url_for([@user, song]) %>
    </li>
  <% end %>
</ul>

<% if current_user == @user %>
  <br/><br/>
  
  <%= link_to "アカウントの削除", @user, method: :delete, data: { confirm: "本当に削除しますか？作った歌のチャートも一緒に削除されます。" } %>
<% end %>
</div>