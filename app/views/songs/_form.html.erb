<% notes = Notes() %> <!-- 音符の取得 -->

<div id="song_form_wrapper">

<% if current_user == @user %>
  <%= form_for([@user, @song]) do |f| %>

    <% if @song.key != nil %>
      <% selected_key = @song.key %> <%# editの場合 %>
    <% else %>
      <% selected_key = "C" %> <%# newの場合 %>
    <% end %>

    タイトル: <%= f.text_field :title, :id => "song_title_form" %><br/>
    キー: <%= f.select(:key, options_for_select(notes[0], :selected => selected_key)) %><br/>
    <%= f.text_area :body %><br/>
    動画のリンク: <%= f.text_field :video %><br/>
    <%= f.submit "送信" %>

  <% end %>
<% end %>

</div>
